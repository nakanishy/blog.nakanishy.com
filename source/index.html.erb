---
pageable: true
per_page: 10
---

<% blog.articles[0...10].each do |article| %>
  <section class="article-item">
    <% link_to article do %>
      <span class="title">
        <%= article.title %>
      </span>
      <span class="description">
        <%= article.summary(100).gsub(/<\/?[^>]*>/, "") %>
      </span>
    <% end %>
    <div class="Meta">
      <date class="Meta__Item" datetime="<%= article.date %>">
        <%= article.date.strftime('%b %e, %Y') %>
      </date>
      <ul class="Meta__Item tags">
        <% article.tags.each do |tag| %>
          <li><a href="<%= tag_path(tag) %>"><%= tag %></a></li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>
